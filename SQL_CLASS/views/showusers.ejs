<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Show User</title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            padding: 3px;
        }

        #form {
            margin: 10px;
        }

        #form button {
            height: 40px;
            width: 90px;
        }

        .container{
            display: flex;
        }
    </style>
</head>

<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Username</th>
        </tr>
        <% for(user of users){ %>
            <tr>
                <td>
                    <%=user.id%>
                </td>
                <td>
                    <%=user.email%>
                </td>
                <td>
                    <%=user.username%>
                </td>
                <td>
                    <form method="GET" action="/user/<%=user.id%>/edit">
                        <button>Edit username</button>
                    </form>
                </td>
            </tr>
            <% } %>
    </table>
    <div class="container">
        <form method="GET" action="/users/add" id="form">
            <button>Add entry</button>
        </form>
        <form method="GET" action="/users/delete" id="form">
            <button>Delete entry</button>
        </form>
    </div>

</body>

</html>